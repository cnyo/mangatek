{% extends 'base.html.twig' %}

{% block title %}Manga{% endblock %}

{% block body %}
    <h1>Manga</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ manga.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ manga.title }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ manga.subtitle }}</td>
            </tr>
            <tr>
                <th>Tome</th>
                <td>{{ manga.tome }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ manga.isbn }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ manga.summary }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ manga.cover }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('manga_index') }}">back to list</a>

    <a href="{{ path('manga_edit', {'id': manga.id}) }}">edit</a>

    {{ include('manga/_delete_form.html.twig') }}
{% endblock %}
